<div class="authentication">
<div>
<form  class="form-container" action="/authentication/sign-up" method="POST">

  <label for="input-name">Name</label>
  <input type="text" required id="input-name" name="name" placeholder="Your Name" />

  <label for="input-username">Username</label>
  <input type="text" required id="input-username" name="username" placeholder="Your Username" />

  <label for="input-email">Email</label>
  <input type="email" required id="input-email" name="email" placeholder="Your Email" />

  <label for="input-password">Password</label>
  <input type="password" required name="password" id="input-password" placeholder="A Strong Password" />

  <button>Sign Up</button>
</form>
</div>
<hr>
<div class="fb-btn">
<a href="/authentication/facebook"><img src="/images/fb-continue.svg"></a>
</div>
</div>


