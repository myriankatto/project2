
<div class="container-shelf">
<h2>{{user.username}}'s <strong>Read</strong> Bookshelf</h2>
{{#with user}}
  <div class="row">
{{#each (reverse this.read)}}
 <div class="col-2">
   <a href="/book/{{ googleID }}">
     <form action="/user/{{../_id}}/read/{{ _id }}/delete" method="POST">
        <button><img class="remove-btn"src="/images/ic_remove.svg"></button>
      </form>
      <div class="card" style="width: 9rem;">
         {{#if imageUrl}}
        <img src="{{ imageUrl }}" class="card-img-top"alt="{{ title }}">
          {{else}}
            <img src="https://dl.acm.org/specs/products/acm/releasedAssets/images/cover-default--book.svg" alt="book without cover image">
      {{/if}}
   
    <div class="card-body">
    <p class="card-text">{{ title }}</p>
      </a>
       </div>
      </div>
      </div> 
{{/each}}
{{/with}}
    </div>
  </div>  




