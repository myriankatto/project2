<div class="container">
{{#if userHas.booksInToRead}}
<h4>Want To Read<a href="/user/{{ document.id }}/toread"><img class="more-btn"src="/images/ic-more-01.svg"/></a></h4>
  <div class="row">
{{#each (limitandreverse document.toRead 6)}}
    <div class="col-2">
            <a href="/book/{{ googleID }}">
      <div class="card-shelf" style="width: 8rem;">
      {{#if imageUrl}}
        <img src="{{ imageUrl }}" class="card-img-top"alt="{{ title }}">
          {{else}}
            <img src="https://dl.acm.org/specs/products/acm/releasedAssets/images/cover-default--book.svg" alt="book without cover image">
      {{/if}}   

      </div>
      </div>
{{/each}}
    </div>
      </a>
  {{else}}
    <h4>Want To Read<img class="more-btn"src="/images/ic-more-01.svg"/></h4>
    <p style="font-weight: lighter;">This shelf is empty. <a href="/">Add a book now.</a></p>
    <br>
  {{/if}}
  </div>